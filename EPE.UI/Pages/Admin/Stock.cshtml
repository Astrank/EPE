@page
@model StockModel
@{
}

<div class="admin-container">
    <aside class="admin-side-bar">
        <div class="menu">
            <p class="menu-label">STORE</p>
            <ul class="menu-list">
                <li><a asp-page="/Admin/Index">Products</a></li>
                <li><a asp-page="/Admin/Orders">Orders</a></li>
                <li><a asp-page="/Admin/Stock">Stock</a></li>
            </ul>
            <p class="menu-label">PROJECTS</p>
            <ul class="menu-list">
                <li><a asp-page="/Admin/Index">Projects</a></li>
            </ul>
        </div>
    </aside>
    <div class="admin-main">
        <div id="app">
            <div class="columns">
                <div class="column is-3">
                    <table class="table">
                        <tr v-for="product in products" @@click="selectProduct(product)">
                            <td>{{product.description}}</td>
                        </tr>
                    </table>
                </div>
                <div class="column is-6" v-if="selectedProduct">
                    <table class="table">
                        <tr v-for="(stock, index) in selectedProduct.stock">
                            <td><input class="input" v-model="stock.description" /></td>
                            <td><input class="input" v-model="stock.qty" /></td>
                            <td><a class="has-text-danger" @@click="deleteStock(stock.id, index)">Delete</a></td>
                        </tr>
                    </table>
                    <a class="button is-warning" @@click="updateStock">
                        Update Products
                    </a>
                </div>
                <div class="column is-3" v-if="selectedProduct">
                    <h2 class="title">New Stock</h2>
                    <div class="field">
                        <div class="control">
                            <input class="input" v-model="newStock.description" />
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <input class="input" v-model="newStock.qty" />
                        </div>
                    </div>
                    <a class="button is-success" @@click="addStock">Add</a>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="~/js/admin/stock.js"></script>
}
