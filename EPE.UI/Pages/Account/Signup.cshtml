@page
@model EPE.UI.Pages.Account.SignupModel

@{ 
    ViewData["Title"] = "Crear cuenta | ";
}

<body>
    <div class="login-container">
        <section class="login-section">
            <a asp-page="/Index" class="login-logo">
                <img src="~/media/logo1.png" alt="">
            </a>
            <form class="login-form" method="POST">
                <div class="form-group">
                    <label asp-for="Usuario.Username">Usuario</label>
                    <input type="text" asp-for="Usuario.Username" class="form-control" autofocus>
                    <span asp-validation-for="Usuario.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Usuario.Email">Email</label>
                    <input type="email" asp-for="Usuario.Email" class="form-control" autofocus>
                    <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Usuario.Password">Contraseña</label>
                    <input type="password" asp-for="Usuario.Password" class="form-control" autofocus>
                    <span asp-validation-for="Usuario.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Usuario.ConfirmPassword">Repetir contraseña</label>
                    <input type="password" asp-for="Usuario.ConfirmPassword" class="form-control" autofocus>
                    <span asp-validation-for="Usuario.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-footer">
                    <a asp-page="/Account/Login" class="create-account">¿Ya tienes una cuenta?</a>
                    <input type="submit" value="Crear cuenta" class="btn-epe account-btn">
                </div>
            </form>
        </section>
        <section class="img-section">
            <div class="login-image"></div>
        </section>
    </div>
</body>